<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amy.android.popularmovies.MovieDetailFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/thumbnail_image"
        android:padding="10dp"/>

    <LinearLayout
        style="@style/DetailHorizontalLinearLayoutGroupStyle">
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="right"
            android:text="@string/title_label"/>
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="left"
            android:id="@+id/title_text"/>
    </LinearLayout>
    <LinearLayout
        style="@style/DetailHorizontalLinearLayoutGroupStyle">
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="right"
            android:text="@string/release_date_label"/>
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="left"
            android:id="@+id/release_date_text"/>
    </LinearLayout>
    <LinearLayout
        style="@style/DetailHorizontalLinearLayoutGroupStyle">
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="right"
            android:text="@string/vote_average_label"/>
        <TextView
            style="@style/DetailGeneralTextStyle"
            android:layout_gravity="left"
            android:id="@+id/vote_average_text"/>
    </LinearLayout>

    <TextView
        style="@style/SynopsisTextStyle"
        android:layout_gravity="center"
        android:id="@+id/synopsis_text"
        android:padding="20dp"/>

</LinearLayout>
